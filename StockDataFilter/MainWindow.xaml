<Window x:Class="StockDataFilter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockDataFilter"
        mc:Ignorable="d"
        Title="Stock Data Filter" Height="350" Width="525">
    <Window.CommandBindings>
        <CommandBinding Command="Open" CanExecute="OpenCommand_CanExecute" Executed="OpenCommand_Executed" />
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="Open" Header="_Otwórz"/>
                <MenuItem Header="_Zapisz" />
                <Separator/>
                <MenuItem Header="_Wyjdź"/>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="281" Width="220"><Run Text="Log:"/><LineBreak/><Run/></TextBlock>
            <DataGrid Name="originalDataGrid" AutoGenerateColumns="False"
                Margin="235,10,10,10">

            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
